body
  background-color #cdd6e8
  font-family 'Open Sans', sans-serif
  font-size 14px
  color #231034

.title-wrapper
  height 50vh
  position relative
  .background
    width 100%
    height 100%
    background-image url('../images/bg.jpg')
    background-position center
    background-repeat no-repeat
    filter blur(2px)
  .title
    position absolute
    top 50%
    left 37%
    font-size 4rem
    font-weight 600
    color #fff
    text-shadow 2px 2px 5px black;
.circles-wrapper
  display flex
  flex-wrap wrap
  justify-content space-around

.circle-card
  background-color #fff
  box-shadow 0 2px 5px 3px rgba(0,0,0,.35);
  margin 1rem
  width 15rem
  min-height 15rem

  .circle-title
    &::after
      display block
      content ""
      clear: both


    .logo
      height 80px
      width 80px
      float left
    .title
      padding 30px 15px 0 90px
      font-size 22px
      font-weight 600
      text-align right

  .list-wrapper
    padding 0.5rem 1rem
    .head-header
      float right
      text-align right
      font-size 13px
      color #223
      .role
        color #5b6c86
        font-size 11px
    .list
      list-style none
      padding-left 5px

      &::after, &::before
        display block
        content ""
        clear: both

      li
        padding 3px 0
